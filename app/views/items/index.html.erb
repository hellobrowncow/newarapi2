
<div class="row">
<div class="col-sm-9 col-md-10 col-md-offset-1">
    <div class="overlay">
     <%= link_to newitem_path do%><span class="glyphicon glyphicon-plus"></span>Add New Clothing<% end -%>
      <div class="collections pull-right">
        Viewing: 
        <%= link_to_unless(!params[:location], "All") do |location| %>
          <span class="this-location"><%= location %></span>
        <% end %>
        <% @collections.each do |collection| %>
          | <%= link_to_unless(params[:location] == collection.location, collection.location, 
              { location: collection.location }) do |location|%>
            <span class="this-location"><%= location %></span>
          <% end %> 
        <% end %>
      </div>

      <div class="col-md-offset-5">
      <h2>Wardrobe</h2>
        <div class="slider-button">
          <div class="btn-group">
            <% if @items.length < 3 %>
            <%else%>
              <button class="btn btn-info js-pause" type="button" id="slide button"><a href="javascript:void(0)" class="button js-pause">Auto-Browse is OFF</a></button>
            <% end %>
          </div>
        </div>
      </div>
      <div class="slider filtering1">        <!-- First Carousel -->

        <% c=0%>
        <% for item in @items%>
        <div><%c +=1%><br>
          <center>
            <%= link_to(image_tag(item.picture.carousel), item_path(item))%>
          </center>
        </h5></div>
        <%end%>

    </div>
  </div>
</div>


<script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>




<script type="text/javascript">
   
  $(document).ready(function(){
    $('.filtering1').slick({
      arrows: true,
      autoplay: false,
      autoplaySpeed: '2000',
      pauseOnHover: true,
      centerMode: false,
      centerPadding: '0px',
      slidesToShow: 3,
      slidesToScroll: 1,
      responsive: [
      {
        breakpoint: 1024,
        settings: {
          slidesToShow: 3,
          slidesToScroll: 1,
          infinite: true,
          dots: false
        }
      },
      {
        breakpoint: 600,
        settings: {
          slidesToShow: 2,
          slidesToScroll: 1
        }
      },
      {
        breakpoint: 480,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1
        }
      }
      ]
    });

    $('.filtering2').slick({
      slidesToShow: 3,
      slidesToScroll: 1,
      arrows: true,
      responsive: [
      {
        breakpoint: 1024,
        settings: {
          slidesToShow: 3,
          slidesToScroll: 1,
          infinite: true,
          dots: false
        }
      },
      {
        breakpoint: 600,
        settings: {
          slidesToShow: 2,
          slidesToScroll: 1
        }
      },
      {
        breakpoint: 480,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1
        }
      }
      ]
    });





  var slideIndex = 1;
$('.js-add-slide').on('click', function(){
  slideIndex++;
  $('.filtering1').slickAdd('<div><h3>'+slideIndex+'</h3></div>');
});

$('.js-remove-slide').on('click', function(){
  $('.filtering1').slickRemove(slideIndex - 1);
  if (slideIndex !== 0) {
    slideIndex--;
  }
});


  var pause = true;

$('.js-pause').on('click', function(){
  if(pause === false) {
    $('.filtering1').slickPause();
    $(this).text('Auto-Browse is OFF');
    pause = true;
  } else {
    $('.filtering1').slickPlay();
    $(this).text('Auto-Browse is ON');
    pause = false;
  }
});

});


</script>




<script type="text/javascript">

    var filtered = false;

    $('.js-filter').on('click', function(){
      if(filtered === false) {
        $('.filtering1').slickFilter(':even');
        $(this).text('Unfilter Slides');
        filtered = true;
      } else {
        $('.filtering1').slickUnfilter();
        $(this).text('Filter Slides');
        filtered = false;
      }
    });

  });
</script>

