  <script type="text/javascript">
   
$(document).ready(function(){
    $('.filtering1').slick({
      slidesToShow: 3,
      slidesToScroll: 1,
      arrows: true
    });

    $('.filtering2').slick({
      slidesToShow: 3,
      slidesToScroll: 1,
      arrows: true
    });

    var filtered = false;

    $('.js-filter').on('click', function(){
      if(filtered === false) {
        $('.filtering').slickFilter(':even');
        $(this).text('Unfilter Slides');
        filtered = true;
      } else {
        $('.filtering').slickUnfilter();
        $(this).text('Filter Slides');
        filtered = false;
      }
    });

        });
</script>


