<div class="overlay">
  <%= form_for :user, url: login_url, html: { role: "form", id: "loginform" } do |f| %>
    <fieldset>
      <legend>    Please sign in</legend>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address", autofocus: true, required: true %>
      </div>
      <div class="form-group">
        <%= f.label :password, id: 'password-label' %>
        <%= f.password_field :password, class: "form-control", placeholder: "Enter your password", required: true %>
      </div>
      <div class="form-group pull-right">
        <%= f.submit "Sign in", class: "btn btn-success", id: 'submit-button' %>
      </div>
    </fieldset>
  <% end %>
      <%= button_to "Sign up", new_user_path, method: :get, class: "btn btn-primary", id: "new_user-button"  %>
</div>