<div class="col-md-8 col-md-offset-2">
  <div class="overlay">
    <div class="pull-right">
      <%= link_to new_item_path do%>
      <span class="glyphicon glyphicon-plus"></span>
      Add New Clothing 
      <% end %> | 
      <%= link_to items_path do%>
      <span class="glyphicon glyphicon-picture"></span>
      Wardrobe 
      <% end %> 

    </div>
    <h1>
      My Clothes in <br><%=@collection.location%>:
    </h1>

    <div class="collection-items">
      <%e=0%>
      <%for @item in @items%>
      <%if @collection.id == @item.collection_id%>
      <%e +=1%>
      <%=link_to item_path(@item) do%>
      <%=image_tag @item.picture.thumbnail%> 

      <% end %>
      <%end%>
      <%end%>
      <%if e==0%>
      <div class="collection-size"><h3>This location is empty ! !</h3></div>
      <%elsif e==1%>
      <div class="collection-size"><h3>You have <%=e%> item at this location.</h3></div>
      <%else%>
      <div class="collection-size"><h3>You have <%=e%> items at this location.</h3></div>
      <%end%>    
    </div>
  </div>
</div>

<%= render 'form' %>
<div class="col-md-6 col-md-offset-3">
    <div class="button-group">
      <div class="col-md-5 col-md-offset-3">
  <div class="overlay">
        <%= button_to "Delete this Location", collection_path(@collection), method: :delete, confirm: "Really delete this Location?", class: "btn btn-danger", id: "delete_location-button" %>
      </div>
    </div>
  </div>
</div>

