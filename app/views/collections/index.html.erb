

<h2><u>Locations:</u></h2>
<%=link_to "Items", items_path%> | 
<%=link_to "Site Index", root_url%> <br>
<%=link_to "Create a new Location", new_collection_path%>

<% g=0%>

<%@collections.each do |collection|%>

<div><h3>Collection: <%=g +=1%></h3><br>
  <%=link_to "This Collection", collection_path(collection)%>
  <strong><%= @user.name%> @<%= collection.location%>: (ID: <%=collection.id %>)</strong><br><br>
  Your items in this collection: <br>
  <%d=0%>
  <%for @item in @items%>
    <%if collection.id == @item.collection_id%>
    <%d +=1%>
    <%=image_tag @item.picture.thumbnail%> 
    <%=@item.color%> <%=@item.clothing_type%><br>
    <%end%>
  <%end%>
  <%if d==0%>
    <strong>This collection is empty!</strong>
  <%elsif d==1%>
    <strong><br>You have <%=d%> item in this collection.</strong>
  <%else%>
    <strong><br>You have <%=d%> items in this collection.</strong>
  <%end%>    
<%end%>

