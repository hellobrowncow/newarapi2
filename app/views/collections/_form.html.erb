<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="overlay">
      <%= form_for @collection do |f| %>
      <fieldset>
        <legend>Collections</legend>
        <div class="form-group">
          <%= f.label :location %>
          <%= f.text_field :location, class: "form-control" %>
        </div>
        <div class="form-group pull-right">
          <%= f.submit class: "btn btn-success" %>
        </div>
        <div class="button">
          <%= button_to "Cancel", collections_path, method: :get, class: "btn btn-warning", id: "cancel-button"  %>
        </div>
        <div class="col-md-6 col-md-offset-4">
          <div class="form-group">
            <%= button_to "Delete this Location", collection_path(@collection), method: :delete, confirm: "Really delete this Location?", class: "btn btn-danger", id: "delete_location-button" %>
          </div>
        </div>
      </fieldset>
      <% end %>
    </div>
  </div>
</div>
