<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @collection do |f| %>
    <fieldset>
      <legend>Collections</legend>
      <div class="form-group">
        <%= f.label :location %>
        <%= f.text_field :location, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit class: "btn btn-warning" %>
      </div>
    </fieldset>
    <% end %>
  </div>
</div>
