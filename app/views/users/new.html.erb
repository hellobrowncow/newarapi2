
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="overlay">


      <%= form_for :user, url: users_path, method: :post, html: { role: "form", id: "newuser" } do |f| %>
      <div class="row">
        <div class="col-lg-8">
          <fieldset>
            <legend>Add User</legend>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class: "form-control", placeholder: "Enter your name", autofocus: true, required: true %>
            </div>
            <div class="form-group">
              <%= f.label :last_name %>
              <%= f.text_field :last_name, class: "form-control", placeholder: "Enter your last name", autofocus: true, required: true %>
            </div>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address", autofocus: true, required: true %>
            </div>
            <div class="form-group">
              <%= f.label :password, id: 'password-label' %>
              <%= f.password_field :password, class: "form-control", placeholder: "Enter your password", required: true %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, id: 'password-label' %>
              <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Enter your password", required: true %>
            </div>
            <div class="form-group">
              <%= f.submit "Add User", class: "btn btn-success", id: 'submit-button' %>
            </div>
          </fieldset>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

