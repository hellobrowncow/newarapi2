
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="overlay"> 
      <div class='link pull-right'>  
      <%= link_to logout_path do %><span class="glyphicon glyphicon-log-out"></span> Log Out 
      <% end %>
      </div>
      <h2>
        Hello, <%=@current_user.name%>
      </h2>
      <p class="information">
        Name: <%=@current_user.name%> 
        <%=@current_user.last_name%> <br>
        Email: <%=@current_user.email%> 
      </p>
      <p class='link'>
        <%= link_to edit_user_path do%><span class="glyphicon glyphicon-pencil"></span>
       Edit Profile <% end %>
      </p>
      <p class='date'>
        Today is: 
        <%=raw Time.now.strftime("<i>%A, %B %d</i> <br><strong>(%d/%m/%Y)</strong> %k:%M:%S" ) %>
      </p>
      <p class='link'>
        <%= link_to new_collection_path do%>
        <span class="glyphicon glyphicon-plus"></span>
        Add a Location 
        <% end %>
        <%if current_user.collections.length > 0 %> | 
          <%= link_to new_item_path do%>
          <span class="glyphicon glyphicon-plus"></span> 
          Add New Clothing <% end %>
        <% end %>
      </p>
    </div>
  </div>
</div>